<div class="calculator-card">
    <h1 class="text-2xl font-bold text-center mb-1">PrimeLab Ammonia Calc</h1>
    <p class="text-center text-slate-400 text-sm mb-6">Calculates toxic NH3 from "mg/l (N)" readings.</p>

    <div class="space-y-4">
        <div class="input-group">
            <label for="tan">Total Ammonia (TAN) from PrimeLab</label>
            <div class="relative">
                <input type="number" id="tan" step="0.01" placeholder="e.g. 0.06">
                <span class="absolute right-4 top-3.5 text-slate-500 text-sm">mg/l (N)</span>
            </div>
        </div>

        <div class="input-group">
            <label for="ph">pH Level</label>
            <input type="number" id="ph" step="0.1" placeholder="e.g. 7.8">
        </div>

        <div class="input-group">
            <label for="temp">Water Temperature</label>
            <div class="relative">
                <input type="number" id="temp" step="0.1" placeholder="e.g. 12">
                <span class="absolute right-4 top-3.5 text-slate-500 text-sm">°C</span>
            </div>
        </div>

        <div class="input-group">
            <label for="salinity">Salinity (Koi Medic)</label>
            <div class="relative">
                <input type="number" id="salinity" step="0.01" value="0" placeholder="e.g. 0.3">
                <span class="absolute right-4 top-3.5 text-slate-500 text-sm">%</span>
            </div>
            <p class="text-xs text-slate-500 mt-1">Leave at 0 for normal freshwater.</p>
        </div>

        <button class="calculate-btn" id="calcBtn">Calculate Safety</button>
    </div>

    <div id="resultContainer" class="result-box hidden">
        <p class="text-xs uppercase tracking-wider text-slate-400 font-semibold">Toxic Free Ammonia (NH3)</p>
        <div class="result-value" id="nh3Value">--</div>
        <p id="safetyBadge" class="text-sm font-medium mt-1">--</p>
        <p class="text-xs text-slate-500 mt-4 pt-4 border-t border-slate-700">
            *Converted from Nitrogen (N) to Ammonia (NH3) molecule weight.<br>
            *Includes salinity correction factor.
        </p>
    </div>
</div>

<script>
    document.getElementById('calcBtn').addEventListener('click', function() {
        // 1. Get Inputs
        const tan_N = parseFloat(document.getElementById('tan').value);
        const ph = parseFloat(document.getElementById('ph').value);
        const tempC = parseFloat(document.getElementById('temp').value);
        let salinityPercent = parseFloat(document.getElementById('salinity').value);

        // Simple Validation
        if (isNaN(tan_N) || isNaN(ph) || isNaN(tempC)) {
            alert("Please enter valid numbers for fields.");
            return;
        }
        if (isNaN(salinityPercent)) salinityPercent = 0;

        // 2. Constants for Calculation
        // Kelvin
        const tk = tempC + 273.15;
        
        // Dissociation Constant (pKa) - Base Freshwater
        let pka = 0.09018 + (2729.92 / tk);
        
        // Salinity Correction
        // Convert Percentage to PPT (1% = 10 PPT)
        const salinityPPT = salinityPercent * 10;
        
        // Salinity increases pKa slightly, reducing toxicity.
        // Approx: +0.003 to pKa per 1 PPT salinity
        pka += (0.003 * salinityPPT);

        // 3. Calculate Fraction of Free Ammonia (f)
        // Formula: 1 / (10^(pKa - pH) + 1)
        const fraction = 1 / (Math.pow(10, pka - ph) + 1);

        // 4. Calculate Free Ammonia as Nitrogen (NH3-N)
        const nh3_as_N = tan_N * fraction;

        // 5. CORRECTIVE STEP FOR PRIMELAB: 
        // Convert Nitrogen weight to Molecule weight (NH3)
        // Factor = ~1.2158
        const nh3_molecule = nh3_as_N * 1.2158;

        // 6. Display & Styling
        const resultBox = document.getElementById('resultContainer');
        const valueDisplay = document.getElementById('nh3Value');
        const badge = document.getElementById('safetyBadge');

        // Formatting decimals
        let decimals = 3;
        if(nh3_molecule < 0.01 && nh3_molecule > 0) decimals = 4;
        
        valueDisplay.textContent = nh3_molecule.toFixed(decimals) + " mg/l";
        
        // Safety Logic
        resultBox.classList.remove('hidden');
        valueDisplay.className = 'result-value'; // Reset colors
        badge.className = 'text-sm font-medium mt-1';

        if (nh3_molecule <= 0.02) {
            valueDisplay.classList.add('status-safe');
            badge.textContent = "✅ SAFE LEVEL";
            badge.classList.add('status-safe');
        } else if (nh3_molecule <= 0.05) {
            valueDisplay.classList.add('status-warning');
            badge.textContent = "⚠️ WARNING";
            badge.classList.add('status-warning');
        } else {
            valueDisplay.classList.add('status-danger');
            badge.textContent = "⛔ DANGER";
            badge.classList.add('status-danger');
        }
    });
</script>

